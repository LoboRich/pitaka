= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :account_id
    = f.text_field :account_id
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
